<div id="carousel-example-generic" class="carousel slide" data-ride="carousel" style="width: 55%; margin: 0 auto">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.JPG' %>
      <div class="carousel-caption">
        Find a place to meet. ...
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.JPG' %>
      <div class="carousel-caption">
        Find a place to eat. ...
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider3.JPG' %>
      <div class="carousel-caption">
        Find a place to enjoy. ...
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
  
  <div class="booyah-box col-xs-10 col-xs-offset-1">
 
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i><%= place.address %></i><br/>
    <p><%= place.description %></p>

    <% if place.user.present? %>
      <small> <%= place.user.email %></small>
      <% end %>
  
    <% if place.comments.present? %>
      <div class="col-xs-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
          <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %>
          <small> <%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>

    <% if place.photos.present? %>
      <div class="col-xs-12 col-xs-offset-0.5">
        <% p = place.photos.last %>
        <%= image_tag p.picture %>
        <br/><br/>
      </div>
    <% end %>
  </div>

<% end %>
    
<div class="flickr_pagination">
    <%= will_paginate @places, :container => true %>
</div>

